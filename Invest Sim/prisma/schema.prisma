datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    String @id @default(cuid())
  email String @unique

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  password Password?

  orders Order?
}

model Password {
  hash String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade, onUpdate: Cascade)
  userId String @unique
}

model Portfolio {
  
  

}

model BuyOrder {
  
  symbol String @id
  
  orderType String //market or limit, if limit take max price to buy
}

model SellOrder {
  
  symbol String @id
  
  orderType String //market or limit, if limit take max price to sell

}

model Stock {

  name String @unique
  symbol String @id

}